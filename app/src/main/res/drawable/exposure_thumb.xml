<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape
                    android:shape="oval">
                    <solid android:color="@color/selected_option_alternate"/>

                    <size
                        android:height="32dp"
                        android:width="32dp"/>
                </shape>
            </item>
            <item
                android:height="24dp"
                android:width="24dp"
                android:gravity="center">
                <rotate
                    android:drawable="@drawable/exposure_icon"
                    android:height="24dp"
                    android:width="24dp"
                    android:fromDegrees="90"
                    android:toDegrees="90"
                    android:gravity="center"/>
            </item>
        </layer-list>
    </item>
</selector>
